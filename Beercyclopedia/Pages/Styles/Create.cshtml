@page
@model Beercyclopedia.Pages.Styles.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Add a New Style</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <p>Style Name: </p>
            <input asp-for="Style.Name" class="form-control"/>
        </div>
        <a asp-page="Index" class="btn btn-secondary m-2">Return</a>
        <button type="submit" class="btn btn-primary" style="width:150px;">Add Style</button>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}