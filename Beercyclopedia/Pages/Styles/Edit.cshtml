@page
@model Beercyclopedia.Pages.Styles.EditModel

<form method="post">
    <input hidden asp-for="Style.Id"/>
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Style</h2>
            <hr/>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                Style Name:
                <input asp-for="Style.Name" class="form-control"/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}