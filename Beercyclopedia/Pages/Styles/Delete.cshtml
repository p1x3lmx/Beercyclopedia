@page
@using Beercyclopedia.Model
@model Beercyclopedia.Pages.Styles.DeleteModel

<form method="post">
    <input hidden asp-for="Style.Id"/>
    <div class="border pt-3 mt-4">
        <h2 class="text-primary pl-3">Delete Style</h2>
        <hr/>
        <div class="row pb-2">
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                @{
                    if (Model.isInuse == null)
                    {
                        <p>The style is not used it's safe to delete.</p>
                    }
                }
                <p>The Style to delete is @Model.Style.Name</p>
            </div>
        </div>
        <a asp-page="Index" class="btn btn-primary mx-0">Return</a>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}