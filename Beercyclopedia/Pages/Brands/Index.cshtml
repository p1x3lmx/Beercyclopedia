@page
@model Beercyclopedia.Pages.Brands.IndexModel

<div class="container p-3">
    <div class="row pt-8">
        <div class="col-6">
            <h2 class="text-primary">Brands</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">Create</a>
        </div>
    </div>
    
    <br/> <br/>
    
    <table class="table table-bordered table-stripped" style="width: 100%">
        <thead>
        <tr>
            <th>
                Brands
            </th>
            <th class="text-center">
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.Brands)
        {
            <tr>
                <td width="80%">@obj.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-0"><i class="bi bi-pencil-square" role="img" aria-label="Edit"></i></a>
                    <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-0"><i class="bi bi-trash" role="img" aria-label="trash"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>