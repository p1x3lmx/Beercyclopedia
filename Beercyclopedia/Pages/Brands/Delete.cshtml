@page
@model Beercyclopedia.Pages.Brands.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Brand</h2>
            <hr/>
            <input hidden asp-for="Brand.Id"/>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                @{
                    if (Model.IsInUse)
                    {
                        <p>The Brand is in use you can not delete this. </p>
                    }
                    else
                    {
                        <p>The Style to delete is @Model.Brand.Name</p>
                        <p>This brand isn't used and it's safe to delete.</p>
                    }
                }
            </div>
        </div>
        <div class="mb-3">
            <a asp-page="Index" class="btn btn-primary m-2">Return</a>
            @{
                if (!Model.IsInUse)
                {
                    <button type="submit" class="btn btn-danger m-2" style="width:150px;">Delete</button>
                }
            }
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}