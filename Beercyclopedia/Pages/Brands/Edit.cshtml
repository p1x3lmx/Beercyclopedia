@page
@model Beercyclopedia.Pages.Brands.EditModel

<form method="post">
    <input hidden asp-for="Brand.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Brand</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            Style Name:
            <input asp-for="Brand.Name" class="form-control"/>
            <span asp-validation-for="Brand.Name" class="text-danger"></span>
        </div>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px;">Return</a>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}