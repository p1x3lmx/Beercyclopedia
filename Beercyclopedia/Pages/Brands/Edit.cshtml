@page
@model Beercyclopedia.Pages.Brands.EditModel

<form method="post">
    <div class="row">
        <div class="border pt-3 mt-4">
            <input hidden asp-for="Brand.Id"/>
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Edit Brand</h2>
                <hr/>
            </div>
            <div class="row pb-2">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="mb-3">
                Style Name:
                <input asp-for="Brand.Name" class="form-control"/>
                <span asp-validation-for="Brand.Name" class="text-danger"></span>
            </div>
            <a asp-page="Index" class="btn btn-primary m-2">Return</a>
            <button type="submit" class="btn btn-danger" style="width:150px;">Update</button>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}