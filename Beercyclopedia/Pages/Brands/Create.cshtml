@page
@model Beercyclopedia.Pages.Brands.CreateModel

<form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Add a New Brand</h2>
                <hr/>
            </div>
            <div class="row pb-2">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="mb-3">
                Brewery Name:
                <input asp-for="Brand.Name" class="form-control"/>
                <span asp-validation-for="Brand.Name" class="text-danger"></span>
            </div>
            <a asp-page="Index" class="btn btn-secondary m-2">Return</a>
            <button type="submit" class="btn btn-primary" style="width:150px;">Add Brand</button>
        </div>
</form>