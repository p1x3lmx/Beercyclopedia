@page
@model Beercyclopedia.Pages.Beers.IndexModel

<div class="container p-3">
    <div class="row pt-8">
        <div class="col-6">
            <h2 class="text-primary">Beers List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">Create</a>
        </div>
    </div>
    
    <br/> <br/>
    
    <table class="table table-bordered table-stripped" style="width: 100%">
        <thead>
        <tr>
            <th>
                Beer
            </th>
            <th>
                Brand
            </th>
            <th>
                Style
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.Beers)
        {
            <tr>
                <td width="30%">@obj.Name</td>
                <td width="30%">@obj.Brands.Name</td>
                <td width="30%">@obj.Styles.Name</td>
                <td width="10%"><a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square" role="img" aria-label="Edit" alt="Edit"></i></a>
                    <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash" role="img" aria-label="Trash" alt="Delete"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>